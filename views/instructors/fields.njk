<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ instructor.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Instructor</div>
    <div>
        <input
            type="text"
            name="name" 
            placeholder="Name of Instructor" 
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value="{{ instructor.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Gender</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                {% if instructor.gender == 'M' %} 
                checked 
                {% endif %}>Male</span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F" 
                {% if instructor.gender == 'F' %}
                checked
                {% endif %}>Female</span>
    </div>
</div>

<div class="item">
    <div>Area</div>
    <div>
        <input
            type="text" 
            name="services" 
            placeholder="Activities (use comma to separate)" 
            value="{{ instructor.services }}"
        >
    </div>
</div>

<button type="submit">Save</button>